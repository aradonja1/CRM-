<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.projekat.AdminController">
    <stylesheets>
        <URL value = "@/css/admin.css" />
    </stylesheets>
   <center>
      <GridPane hgap="4.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name:" />
            <Label text="Surname:" GridPane.rowIndex="1" />
            <Label text="Username:" GridPane.rowIndex="3" />
            <Label text="Password:" GridPane.rowIndex="4" />
            <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            <TextField fx:id="fldName" GridPane.columnIndex="1" />
            <TextField fx:id="fldSurname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="fldUsername" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <PasswordField fx:id="fldPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <PasswordField fx:id="fldRptPassword" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Repeat password:" GridPane.rowIndex="5" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
              <buttons>
                <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" onAction="#onActionOk" text="Ok" />
                  <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#onActionCancel" text="Cancel" />
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="lstView" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="40.0" prefWidth="100.0" />
            <Button mnemonicParsing="false" onAction="#onActionAdd" prefHeight="33.0" prefWidth="99.0" text="Add" />
            <Button mnemonicParsing="false" onAction="#onActionEdit" prefHeight="33.0" prefWidth="99.0" text="Edit" />
            <Button mnemonicParsing="false" onAction="#onActionDelete" prefHeight="33.0" prefWidth="99.0" text="Delete" />
            <Button mnemonicParsing="false" onAction="#onActionCustomers" prefHeight="33.0" prefWidth="99.0" text="Customers" />
         </children>
      </VBox>
   </right>
</BorderPane>
